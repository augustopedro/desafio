<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <TextView
        android:id="@+id/textRepoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repo_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginStart="@dimen/space_large"
        android:textSize="22sp"
        android:textColor="@color/some_grey"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/lorem_ipsum"
        android:layout_marginEnd="@dimen/space_medium"
        app:layout_constraintEnd_toStartOf="@id/imageAvatar"
        app:layout_constraintStart_toStartOf="@id/textRepoName"
        app:layout_constraintTop_toBottomOf="@+id/textRepoName" />

    <TextView
        android:id="@+id/textForksCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:text="123"
        android:textColor="@color/some_yellow"
        android:textSize="@dimen/number_size"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space_medium"
        app:drawableStartCompat="@drawable/ic_baseline_usb"
        app:drawableTint="@color/some_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textStarsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:text="123"
        android:textColor="@color/some_yellow"
        android:textSize="@dimen/number_size"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space_medium"
        app:drawableStartCompat="@drawable/ic_baseline_star"
        app:drawableTint="@color/some_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textForksCount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/some_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginTop="@dimen/space_small"/>

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/space_medium"
        android:layout_marginEnd="@dimen/space_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/some_grey"
        android:layout_marginTop="@dimen/space_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageAvatar"
        app:layout_constraintStart_toStartOf="@+id/imageAvatar"
        app:layout_constraintTop_toBottomOf="@id/imageAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>